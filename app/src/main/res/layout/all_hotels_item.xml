<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:layout_marginBottom="-3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/AllHotelImg"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/AllHotelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/AllHotelImg"
            android:text="Royal Bosteri Hotel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AllHotelAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/AllHotelImg"
            android:layout_below="@+id/AllHotelTitle"
            android:text="Royal Bosteri Hotel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AllHotelCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/AllHotelImg"
            android:layout_below="@+id/AllHotelAddress"
            android:text="Royal Bosteri Hotel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/AllHotelPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 com"
            android:textSize="25sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/AllHotelDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/AllHotelPrice"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:text="20/07/2020" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>